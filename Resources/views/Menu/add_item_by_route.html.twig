{% extends '@WucdbmMenuBuilder/Route/base.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            {% form_theme form '@WucdbmMenuBuilder/_shared/form/form_theme.html.twig' %}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_rest(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-default">
                    Add Item
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block scripts %}

    {% import '@WucdbmMenuBuilder/_shared/collection_macro.html.twig' as macro %}

    {{ macro.collection(form.parameters) }}

{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        {{ menu.name }}
    </li>
    {% if item.parent %}
        <li>
            Child to {{ item.name }}
        </li>
    {% endif %}
    <li>
        Route {{ route.route }}
    </li>
    <li>
        Add a Menu Item
    </li>
{% endblock %}