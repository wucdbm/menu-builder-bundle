<ul class="list-group">
    {% for item in items %}
        <li class="list-group-item">
            <a href="javascript:;" class="x-editable-text" data-type="text" data-pk="1"
               data-url="{{ path('wucdbm_menu_builder_menu_item_name_update', {id: item.id}) }}"
               data-placement="top" title="Set Item Name">
                {{ item.name }}
            </a>
            <div class="btn-group pull-right">
                <a href="{{ path('wucdbm_menu_builder_menu_items_remove', {id: menu.id, itemId: item.id}) }}" class="btn btn-xs btn-link ajax-action">
                    <i class="fa fa-times"></i>
                    Remove
                </a>
                <a href="{{ path('wucdbm_menu_builder_menu_items_add_sub', {id: menu.id, itemId: item.id}) }}" class="btn btn-xs btn-link">
                    <i class="fa fa-plus"></i>
                    Add
                </a>
                <a href="{{ path('wucdbm_menu_builder_menu_item_edit', {id: item.id}) }}" class="btn btn-xs btn-link">
                    <i class="fa fa-plus"></i>
                    Edit
                </a>
                <a href="{{ item|menuItemPath }}" class="btn btn-xs btn-link" target="_blank">
                    <i class="fa fa-anchor"></i>
                    Visit
                </a>
            </div>
            {% if item.children|length %}
                <div class="clearfix"></div>
                <br>
                {% include _self with {items: item.children} %}
            {% endif %}
        </li>
    {% endfor %}
</ul>