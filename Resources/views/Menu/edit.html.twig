{% extends '@WucdbmMenuBuilder/Menu/base.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-xs-12">
            <div data-refresh="{{ path('wucdbm_menu_builder_menu_edit_refresh', {id: menu.id}) }}">
                {% include '@WucdbmMenuBuilder/Menu/view/content.html.twig' %}
            </div>
        </div>
    </div>

{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <code>{{ menu.name }}</code>
    </li>
    <li>
        Edit
    </li>
    <li class="pull-right">
        <a href="{{ path('wucdbm_menu_builder_menu_preview', {id: menu.id}) }}">
            <i class="fa fa-search"></i>
            Preview
        </a>
    </li>
    <li class="pull-right">
        <a href="{{ path('wucdbm_menu_builder_menu_remove', {id: menu.id}) }}"
           data-confirm="Should Menu '{{ menu.name }}' be removed?">
            <i class="fa fa-times"></i>
            Remove
        </a>
    </li>
    <li class="pull-right">
        <a href="{{ path('wucdbm_menu_builder_menu_items_add', {id: menu.id}) }}">
            <i class="fa fa-plus"></i>
            Add Item
        </a>
    </li>
{% endblock %}