<ul>
    {% for item in items %}
        {% if item.children|length %}
            <li>
                <a href="{{ item|menuItemPath }}">
                    {{ item.name }}
                </a>
                <div class="clearfix"></div>
                {% include _self with {items: item.children} %}
            </li>
        {% else %}
            <li>
                <a href="{{ item|menuItemPath }}">
                    {{ item.name }}
                </a>
            </li>
        {% endif %}
    {% endfor %}
</ul>