<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="wucdbm_menu_bundle.repo.menus.entity_class">Wucdbm\Bundle\MenuBuilderBundle\Entity\Menu</parameter>
        <parameter key="wucdbm_menu_bundle.repo.menus.repository_class">Wucdbm\Bundle\MenuBuilderBundle\Repository\MenuRepository</parameter>

        <parameter key="wucdbm_menu_bundle.repo.menus_items.entity_class">Wucdbm\Bundle\MenuBuilderBundle\Entity\MenuItem</parameter>
        <parameter key="wucdbm_menu_bundle.repo.menus_items.repository_class">Wucdbm\Bundle\MenuBuilderBundle\Repository\MenuItemRepository</parameter>
    </parameters>

    <services>

        <!-- Since we can not use parameters in the <factory/> attributes -->
        <!-- Simply copy/paste this service and put the correct values for your application -->
        <!-- In case you have multiple entity managers and/or multiple DB connections -->
        <service id="wucdbm_menu_builder.repo.abstract" abstract="true">
            <factory service="doctrine.orm.default_entity_manager" method="getRepository"/>
        </service>

        <service id="wucdbm_menu_builder.repo.menus" class="%wucdbm_menu_bundle.repo.menus.repository_class%"
                 parent="wucdbm_menu_builder.repo.abstract">
            <argument>%wucdbm_menu_bundle.repo.menus.entity_class%</argument>
        </service>
        <service id="wucdbm_menu_builder.repo.menus_items" class="%wucdbm_menu_bundle.repo.menus_items.repository_class%"
                 parent="wucdbm_menu_builder.repo.abstract">
            <argument>%wucdbm_menu_bundle.repo.menus_items.entity_class%</argument>
        </service>
        <service id="wucdbm_menu_builder.repo.menus_items_parameters" class="Wucdbm\Bundle\MenuBuilderBundle\Repository\MenuItemParameterRepository"
                 parent="wucdbm_menu_builder.repo.abstract">
            <argument>Wucdbm\Bundle\MenuBuilderBundle\Entity\MenuItemParameter</argument>
        </service>

        <service id="wucdbm_menu_builder.repo.routes" class="Wucdbm\Bundle\MenuBuilderBundle\Repository\RouteRepository"
                 parent="wucdbm_menu_builder.repo.abstract">
            <argument>Wucdbm\Bundle\MenuBuilderBundle\Entity\Route</argument>
        </service>
        <service id="wucdbm_menu_builder.repo.routes_parameters" class="Wucdbm\Bundle\MenuBuilderBundle\Repository\RouteParameterRepository"
                 parent="wucdbm_menu_builder.repo.abstract">
            <argument>Wucdbm\Bundle\MenuBuilderBundle\Entity\RouteParameter</argument>
        </service>
        <service id="wucdbm_menu_builder.repo.routes_parameters_types" class="Wucdbm\Bundle\MenuBuilderBundle\Repository\RouteParameterTypeRepository"
                 parent="wucdbm_menu_builder.repo.abstract">
            <argument>Wucdbm\Bundle\MenuBuilderBundle\Entity\RouteParameterType</argument>
        </service>

    </services>
</container>